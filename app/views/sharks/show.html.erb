<p id="notice"><%= notice %></p>
<p>
   <% if @shark.avatar %>
     <strong>Photo</strong>
     <%= image_tag @shark.avatar.url(:large) %>
   <% end %>
</p>
<table>
  <thead>
    <tr>
      <th>Tag Number</th>
      <th>Species</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Method</th>
      <th>Length<br/>Inches/Feet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
     <center><tr>
        <td><%= tag.number %> </td>
        <td><%= tag.species %> </td>
        <td><%= tag.lat %> </td>
        <td><%= tag.lng %> </td>
        <td><%= tag.method %> </td>
        <td><%= tag.length %> <%= tag.length/12 %> </td>
      </tr></center>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_shark_path(@shark) %> |
<%= link_to 'Back', sharks_path %>
